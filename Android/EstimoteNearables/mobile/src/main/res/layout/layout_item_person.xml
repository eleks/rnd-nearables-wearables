<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_small">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_vertical"
        android:text="Just Now"
        android:textColor="@color/font_time"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/time"
        android:layout_toRightOf="@+id/image">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_vertical"
            android:text="Batman"
            android:textColor="@color/font_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center_vertical"
            android:text="ELEKS"
            android:textColor="@color/font_location"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_below="@id/detailsContainer"
        android:layout_alignLeft="@id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_text_pressed"/>

</RelativeLayout>